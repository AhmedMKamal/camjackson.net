doctype html
html
  head
    title= config.title
    link(rel='stylesheet', href='style/style.css', type='text/css')
    link(rel='shortcut icon', href='favicon.ico')
    meta(name='viewport', content='width=device-width, initial-scale=1')

  body
    main
      header
        h1#heading= config.heading
        nav
          p Nav bar!
      section
        each post in posts
          article
            h2= post.title
            time(pubdate)= post.posted
            != marked(post.text)
      footer
        p A footer!
